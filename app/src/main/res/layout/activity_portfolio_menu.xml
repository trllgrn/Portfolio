<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#80CBC4"
    tools:context=".PortfolioMenuActivity">



    <TextView
        android:text="@string/menu_title"
        android:textSize="@dimen/abc_text_size_headline_material"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menu_title_txtview"
        android:layout_centerHorizontal="true" />

    <Button
        style="@style/MyButton"
        android:text="SPOTIFY STREAMER"
        android:id="@+id/spot_streamer_btn"
        android:layout_below="@+id/menu_title_txtview"
        android:layout_marginTop="42dp"
        android:onClick="detectAndCheers" />

    <Button
        style="@style/MyButton"
        android:text="SCORES APP"
        android:id="@+id/scores_app_btn"
        android:layout_below="@+id/spot_streamer_btn"
        android:onClick="detectAndCheers" />

    <Button
        style="@style/MyButton"
        android:text="LIBRARY APP"
        android:id="@+id/lib_app_btn"
        android:layout_below="@+id/scores_app_btn"
        android:onClick="detectAndCheers" />

    <Button
        style="@style/MyButton"
        android:text="BUILD IT BIGGER"
        android:id="@+id/bigger_btn"
        android:layout_below="@+id/lib_app_btn"
        android:onClick="detectAndCheers" />

    <Button
        style="@style/MyButton"
        android:text="XYZ READER"
        android:layout_below="@+id/bigger_btn"
        android:id="@+id/xyz_btn"
        android:onClick="detectAndCheers" />

    <Button
        style="@style/MyButton"
        android:text="CAPSTONE: MY OWN APP"
        android:layout_below="@+id/xyz_btn"
        android:id="@+id/cap_btn"
        android:onClick="detectAndCheers"
        android:background="#F44336"
        />


</RelativeLayout>
